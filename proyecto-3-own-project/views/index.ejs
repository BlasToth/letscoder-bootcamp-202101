<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% const name = 'BACKEND' %>
    <title><%= name %> | <%= title %></title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="verbs content"> 
        <h2>All verbs</h2>

        <% if (showVerbs.length > 0) { %>
            <% showVerbs.forEach(v => { %>
                <h3 class="sourcename"><%= v.sourceName %></h3>
                <p class="rest"><%= v.v1 %>, <%= v.v2 %>, <%= v.v3 %></p>
                <% }) %>
            <% } else { %>
                <p>There are no verbs to display</p>
                <% } %>
    </div>
    
</body>
</html>